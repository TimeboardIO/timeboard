<?xml version="1.0" encoding="UTF-8"?>

<features xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="kronops-${project.version}"
          xmlns="http://karaf.apache.org/xmlns/features/v1.4.0"
          xsi:schemaLocation="http://karaf.apache.org/xmlns/features/v1.4.0">


    <repository>mvn:org.ops4j.pax.web/pax-web-features/7.3.4/xml/features</repository>

    <feature name="kronops-base" version="${project.version}">
        <feature>scr</feature>
        <feature>http</feature>
        <feature>http-whiteboard</feature>
        <feature>transaction</feature>
        <feature>jndi</feature>
        <feature>pax-jdbc-config</feature>
        <feature>pax-jdbc-pool-dbcp2</feature>
        <feature>jdbc</feature>
        <feature>jaas</feature>
        <feature dependency="true">aries-blueprint</feature>
        <feature version="[2,3)">jpa</feature>
        <feature version="[5,6)">hibernate</feature>
        <bundle start-level="70">mvn:mysql/mysql-connector-java/8.0.17</bundle>
        <bundle start-level="70">mvn:org.ops4j.pax.jdbc/pax-jdbc-mysql/1.4.0</bundle>
    </feature>

    <feature name="kronops-datasource" version="${project.version}">
        <config name="org.ops4j.datasource-kronops-core-ds">
            dataSourceName=kronops-core-ds
            osgi.jdbc.driver.class=com.mysql.cj.jdbc.Driver
            url=jdbc:mysql://localhost:3306/kronops?createDatabaseIfNotExist=true
            user=root
            password=kronops
            dialect=org.hibernate.dialect.MySQL8Dialect
        </config>
        <capability>
            osgi.service;objectClass=javax.sql.DataSource;effective:=active;osgi.jndi.service.name=kronops-core-ds
        </capability>
    </feature>

    <feature name="kronops-core" version="${project.version}">
        <feature>kronops-base</feature>
        <feature>kronops-datasource</feature>
        <bundle start-level="85">mvn:${project.groupId}/core/${project.version}</bundle>
    </feature>


    <feature name="kronops-core-ui" version="${project.version}">
        <feature>war</feature>
        <feature>kronops-base</feature>
        <bundle start-level="80">mvn:${project.groupId}/core-ui/${project.version}</bundle>
        <bundle start-level="85">mvn:${project.groupId}/theme/${project.version}</bundle>
    </feature>


    <feature name="kronops-security" version="${project.version}">
        <feature>kronops-core</feature>
        <feature>kronops-core-ui</feature>
        <bundle start-level="90">mvn:${project.groupId}/security/${project.version}</bundle>
    </feature>

    <feature name="kronops-home" version="${project.version}">
        <feature>kronops-core</feature>
        <feature>kronops-core-ui</feature>
        <feature>kronops-security</feature>
        <bundle start-level="90">mvn:${project.groupId}/home/${project.version}</bundle>
    </feature>

    <feature name="kronops-projects" version="${project.version}">
        <feature>kronops-core</feature>
        <feature>kronops-core-ui</feature>
        <feature>kronops-security</feature>
        <bundle start-level="90">mvn:${project.groupId}/projects/${project.version}</bundle>
    </feature>

    <feature name="kronops-timesheet" version="${project.version}">
        <feature>kronops-core</feature>
        <feature>kronops-core-ui</feature>
        <feature>kronops-security</feature>
        <bundle start-level="90">mvn:${project.groupId}/timesheet/${project.version}</bundle>
    </feature>

    <feature name="kronops-plugins" version="${project.version}">
        <feature>kronops-core</feature>
        <bundle start-level="90">mvn:${project.groupId}/project-github-import-plugin/${project.version}</bundle>
        <bundle start-level="90">mvn:${project.groupId}/project-jira-import-plugin/${project.version}</bundle>
        <bundle start-level="90">mvn:${project.groupId}/project-msp-export-plugin/${project.version}</bundle>
        <bundle start-level="90">mvn:${project.groupId}/project-xls-export-plugin/${project.version}</bundle>
    </feature>


    <feature name="kronops-shell" version="${project.version}">
        <feature>kronops-core</feature>
        <bundle start-level="90">mvn:${project.groupId}/shell/${project.version}</bundle>
    </feature>
</features>